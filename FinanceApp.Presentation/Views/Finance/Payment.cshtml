@model PaymentViewModel

<h1>Create Transaction</h1>

<form asp-action="Bill" asp-route-id="@Model.Service.Id"  method="post">

    <img src="~/@Model.Service.ImageUrl">
    <div>
        <span>
            @Model.User.UserName
            @Model.User.Age
            @Model.User.Email
        </span>
    </div>
    <button type="submit" class="btn btn-primary">Pay</button>

</form>
