@{
    ViewData["Title"] = "Profile";
    double balance = 0;
}

<div class="profile-div">
    <form asp-action="ChangeBalance" method="post" class="profile-form">
        <p class="form-name">Profile</p>

        <label asp-for="@balance" style="font-size: 25px;">Balance:</label>
        <input asp-for="@balance" type="text">

        <button type="submit">Edit</button>
    </form>
</div>

<style>
    .profile-div {
        margin-top: 100px;
    }

    .form-name {
        font-size: 50px;
    }

    .profile-form input {
        margin-left: 30px;
        margin-top: -10px;
        padding: 8px 15px;
        width: 250px;
        border-radius: 10px;
    }

    .profile-form button {
        padding: 8px 30px;
        border-radius: 10px;
    }
</style>