@model User

@{
    ViewData["Title"] = "Profile";
    var isAdmin = base.User.IsInRole("Admin");
}

<div class="profile-div">
    <form class="profile-form">
        <p class="form-name">Profile</p>
        <input type="text" value="Name: @Model.UserName" readonly>
        @if(!isAdmin) {
        <input type="text" value="Surname: @Model.Surname" readonly>
        <input type="text" value="Age: @Model.Age" readonly>
        }
        <input type="email" value="Email: @Model.Email" readonly>
    </form>
</div>

<style>
    .profile-div {
        position: absolute;
        left: 600px;
        display: flex;
        flex-direction: column;
        margin-top: 180px;
        font-size: 30px;
    }

    .profile-form p {
        font-weight: bold;
        color: #01939c;
        font-size: 40px;
    }

    .profile-form {
        
        opacity: 0.8;
        position: relative;
        background: black;
        max-width: 360px;
        padding: 45px;
        text-align: center;
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
        border-radius: 15px;
    }

    .profile-form input,
    .profile-form textarea {
        outline: 0;
        background: #f2f2f2;
        width: 100%;
        border: 0;
        margin: 0 0 15px;
        padding: 15px;
        box-sizing: border-box;
        font-size: 14px;
        border-radius: 15px;
    }

    .profile-form button {
        text-transform: uppercase;
        outline: 0;
        background: #3324be;
        width: 100%;
        border: 0;
        padding: 15px;
        color: #FFFFFF;
        font-size: 14px;
        border-radius: 15px;
        -webkit-transition: all 0.3 ease;
        transition: all 0.3 ease;
        cursor: pointer;
    }

    .profile-form button:hover,
    .profile-form button:active,
    .profile-form button:focus {
        background: #2957d6;
    }
</style>