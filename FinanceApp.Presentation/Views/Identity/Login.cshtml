@{
    ViewData["Title"] = "Login";
    string Password = string.Empty;
    string Email = string.Empty;
}

<div class="login-box">
    <h2>Login</h2>
    <form asp-action="Login" asp-controller="Identity" method="post">
        <div class="user-box">
            <input asp-for="@Email" type="email" placeholder="Email">
        </div>
        <div class="user-box">
            <input asp-for="@Password" type="password" placeholder="Password">
        </div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <a href="#" style="margin: 0; padding: 0;">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <button style="width: 150px; height: 50px">Submit</button>
        </a>
    </form>
</div>